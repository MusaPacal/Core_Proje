@using EntityLayer.Concrete
@model List<Portfolio>

<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title mb-1">Son projeler</h4>
                <p class="text-muted mb-1">Durumu</p>
            </div>
            <div class="row">
                <div class="col-12">
                    @foreach (var item in Model)
                    {
                        <div class="preview-list">
                            <div class="preview-item">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-warning">
                                        <i class="mdi mdi-chart-pie"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content d-sm-flex flex-grow">
                                    <div class="flex-grow">
                                        <h6 class="preview-subject">@item.PortfolioName</h6>
                                        <p class="text-muted mb-0">@item.PortfolioProjectLanguage</p>

                                        <!-- GitHub Link -->
                                        <a href="@(item.PortfolioLink.StartsWith("http") ? item.PortfolioLink : "https://" + item.PortfolioLink)"
                                           target="_blank"
                                           class="btn btn-sm btn-outline-primary mt-1">
                                            <i class="mdi mdi-github-circle"></i> Proje GitHub Sayfası
                                        </a>
                                    </div>
                                    <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                        <p class="text-muted">@item.PortfolioDate</p>
                                        <p class="text-muted mb-0">(Tamamlandı)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
