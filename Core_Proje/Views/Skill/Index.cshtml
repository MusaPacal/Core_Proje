@using EntityLayer.Concrete
@model List<Skill>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/NewLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenekler</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Oran</th>
                            <th></th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.SkillID</td>
                            <td>@item.SkillTitle</td>
                            <td>
                                <div class="progress">
                                        <div class="@item.SkillColorValue" role="progressbar" style="width: @item.SkillValue%" aria-valuenow="@item.SkillValue" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </td>
                            <td><label class="badge badge-info">@item.SkillValue%</label></td>
                            <td><a class="btn btn-danger" href="/Skill/DeleteSkill/@item.SkillID">Sil</a></td>
                            <td><a class="btn btn-warning" href="/Skill/UpdateSkill/@item.SkillID">Düzenle</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Skill/AddSkill/" class="btn btn-success">Yeni Yetenek Ekle</a>
                <br />
                <br />
            </div>
        </div>
    </div>
</div>