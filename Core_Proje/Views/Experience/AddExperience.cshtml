@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/NewLayout.cshtml";
}


<div class="container-fluid mt-12">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-transparent">
                    <h3 class="mb-0">Yeni Deneyim Kaydı</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Şirket Adı</label>
                            <input type="text" id="input-title" class="form-control" asp-for="ExperienceName" placeholder="Şirket adı">
                        </div>
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Açıklama</label>
                            <textarea id="input-description" class="form-control" asp-for="ExperienceDescription" placeholder="Açıklama"></textarea>
                        </div>
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Resim Url</label>
                            <input type="text" id="input-title" class="form-control" asp-for="ExperienceImgUrl" placeholder="Resim Uzantısı">
                        </div>
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Resim Url</label>
                            <input type="text" id="input-title" class="form-control" asp-for="ExperienceDate" placeholder="Tarih">
                        </div>
                        <button type="submit" class="btn btn-success">Kaydet</button>
                        <a href="/Experience/Index/" class="btn btn-info">Geri</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>