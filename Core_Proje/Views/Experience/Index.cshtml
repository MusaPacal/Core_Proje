@using EntityLayer.Concrete
@model List<Experience>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/NewLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimler</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Şirket Adı</th>
                            <th>Açıklama</th>
                            <th>İkon Url</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {                           
                        <tr>
                            <td>@item.ExperienceID</td>
                            <td>@item.ExperienceName</td>
                            <td>
                                <span class="status" title="@item.ExperienceDescription">
                                        @(item.ExperienceDescription?.Length > 50
                                                                            ? item.ExperienceDescription.Substring(0, 50) + "..."
                                                                            : item.ExperienceDescription)
                                </span>
                            </td>
                            <td><label class="badge badge-info">@item.ExperienceImgUrl</label></td>
                            <td><label class="badge badge-info">@item.ExperienceDate</label></td>
                            <td><a class="btn btn-danger" href="/Experience/DeleteExperience/@item.ExperienceID">Sil</a></td>
                            <td><a class="btn btn-warning" href="/Experience/UpdateExperinece/@item.ExperienceID">Düzenle</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Experience/AddExperience/" class="btn btn-success">Yeni Deneyim Ekle</a>
            </div>
        </div>
    </div>
</div>