@model EntityLayer.Concrete.Message

<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
    <div class="bg-light my-2 p-3 pt-2">
        @using (Html.BeginForm("SendMessagePartial", "Default", FormMethod.Post))
        {
                <div class="form-group my-2">
                <label for="name" class="form-label fw-bolder">Adınız</label>
                <input class="form-control" asp-for="MessageName" type="text" id="name"  required>
            </div>
            <div class="form-group my-2">
                <label for="email" class="form-label fw-bolder">Mail Adresiniz</label>
                <input class="form-control" asp-for="MessageMail" type="email" id="email"  required>
            </div>
            <div class="form-group my-2">
                <label for="message" class="form-label fw-bolder">Mesajınız</label>
                <textarea class="form-control" asp-for="MessageContent" style="resize: none;" id="message" rows="4" required></textarea>
            </div>
            <button class="btn btn-primary mt-2" type="submit">Gönder</button>
        }
    </div>
</div>