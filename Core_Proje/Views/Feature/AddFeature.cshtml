@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "AddFeature";
    Layout = "~/Views/Shared/NewLayout.cshtml";
}

<div class="container-fluid mt-12">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-transparent">
                    <h3 class="mb-0">Yeni Feature Kaydı</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Feature Başlık</label>
                            <input type="text" id="input-title" class="form-control" asp-for="FeatureHeader" placeholder="Feature Başlık">
                        </div>
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Feature Alt Başlık</label>
                            <textarea id="input-description" class="form-control" asp-for="FeatureTitle" placeholder="Feature Alt Başlık"></textarea>
                        </div>
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Feature Ad</label>
                            <input type="text" id="input-title" class="form-control" asp-for="FeatureName" placeholder="Feature Ad">
                        </div>
                        <button type="submit" class="btn btn-success">Kaydet</button>
                        <a href="/Feature/Index/" class="btn btn-info">Geri</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
