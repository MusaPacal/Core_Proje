@using EntityLayer.Concrete
@model List<Feature>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/NewLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Alt Başlık</th>
                            <th>Ad</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FeatureID</td>
                                <td>@item.FeatureHeader</td>
                                <td>
                                    <span class="status" title="@item.FeatureTitle">
                                        @(item.FeatureTitle?.Length > 50
                                                                            ? item.FeatureTitle.Substring(0, 50) + "..."
                                                                            : item.FeatureTitle)
                                </span>
                            </td>
                            <td><label class="badge badge-info">@item.FeatureName</label></td>
                            <td><a class="btn btn-danger" href="/Feature/DeleteFeature/@item.FeatureID">Sil</a></td>
                            <td><a class="btn btn-warning" href="/Feature/UpdateFeature/@item.FeatureID">Düzenle</a></td>
                        </tr>
                                                }
                    </tbody>
                </table>
                <br />
                <a href="/Feature/AddFeature/" class="btn btn-success">Yeni Öne Çıkan Ekle</a>
            </div>
        </div>
    </div>
</div>


