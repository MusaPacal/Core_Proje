@using EntityLayer.Concrete
@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/NewLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad</th>
                            <th>Mail</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>Mesajı Gör</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MessageID</td>
                                <td>@item.MessageName</td>
                                <td>@item.MessageMail</td>
                            <td><label class="badge badge-info">@item.Date</label></td>
                            <td>
                                @if (item.Status == true)
                                {
                                    <div class="badge badge-outline-success">Okundu</div>
                                }
                                else
                                {
                                    <div class="badge badge-outline-danger">Okunmadı</div>
                                }
                            </td>
                            <td><a class="btn btn-info" href="/Message/GetMessageDetails/@item.MessageID">Detay</a></td>
                            <td><a class="btn btn-danger" href="/Message/DeleteMessage/@item.MessageID">Sil</a></td>
                        </tr>
                         }
                    </tbody>
                </table>
                <br />
            </div>
        </div>
    </div>
</div>
<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>

