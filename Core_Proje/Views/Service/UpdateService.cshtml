@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/NewLayout.cshtml";
}

<div class="container-fluid mt-12">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-transparent">
                    <h3 class="mb-0">Hizmet Düzenleme</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Id</label>
                            <input type="text" id="input-title" class="form-control" asp-for="ServiceID" placeholder="Id" readonly style="background-color:#1a1c23; color:#fff; border:1px solid #444; opacity:1;">
                        </div>
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Başlık</label>
                            <input type="text" id="input-title" class="form-control" asp-for="ServiceTitle" placeholder="Başlık">
                        </div>
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Görsel İkon Yolu</label>
                            <input type="text" id="input-title" class="form-control" asp-for="ServiceImgUrl" placeholder="Görsel İkon Yolu">
                        </div>
                        <button type="submit" class="btn btn-success">Kaydet</button>
                        <a href="/Service/Index/" class="btn badge-info">Vazgeç</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
