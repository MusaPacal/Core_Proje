@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-responsive">
    <table class="table align-items-center table-dark">
        <thead class="thead-dark">
            <tr>
                <th scope="col" class="sort text-white text-uppercase font-weight-bold fs-6" data-sort="name">#</th>
                <th scope="col" class="sort text-white text-uppercase font-weight-bold fs-6" data-sort="name">Başlık</th>
                <th scope="col" class="sort text-white text-uppercase font-weight-bold fs-6" data-sort="budget">Görsel İkon Yolu</th>
                <th scope="col" class="sort text-white text-uppercase font-weight-bold fs-6" data-sort="status">İşlemler</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="budget">@item.ServiceID</td>
                    <td>
                        <span class="badge badge-dot mr-4">
                            <i class="bg-warning"></i>
                            <span class="status">@item.ServiceTitle</span>
                        </span>
                    </td>
                <td>
                    <span class="badge badge-dot mr-4">
                        <i class="bg-warning"></i>
                        <span class="status">@item.ServiceImgUrl</span>
                    </span>
                </td>
                <td>
                    <div class="dropdown">
                        <a class="btn btn-sm alert-success text-white" role="button" data-toggle="dropdown">
                            <img src="~/Template/images/more.png" width="20" height="20" alt="İşlemler">
                        </a>
                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                <a class="dropdown-item" href="/Service/DeleteService/@item.ServiceID">Sil</a>
                                <a class="dropdown-item" href="/Service/UpdateService/@item.ServiceID">Düzenle</a>
                        </div>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <br />
    <a href="/Service/AddService/" class="btn btn-success">Yeni Hizmet Ekle</a>
</div>

