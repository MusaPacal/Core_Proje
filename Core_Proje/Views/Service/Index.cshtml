@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/NewLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Görsel İkon Yolu</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ServiceID</td>
                                <td>@item.ServiceTitle</td>
                                <td><label class="badge badge-info">@item.ServiceImgUrl</label></td>
                                <td><a class="btn btn-danger" href="/Service/DeleteService/@item.ServiceID">Sil</a></td>
                                <td><a class="btn btn-warning" href="/Service/UpdateService/@item.ServiceID">Düzenle</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Service/AddService/" class="btn btn-success">Yeni Hizmet Ekle</a>
            </div>
        </div>
    </div>
</div>
<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>