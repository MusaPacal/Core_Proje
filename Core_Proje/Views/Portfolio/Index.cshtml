@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-responsive">
    <table class="table align-items-center table-dark">
        <thead class="thead-dark">
            <tr>
                <th scope="col" class="sort text-white text-uppercase font-weight-bold fs-6" data-sort="name">#</th>
                <th scope="col" class="sort text-white text-uppercase font-weight-bold fs-6" data-sort="name">Poroje İkonu ve Dili</th>
                <th scope="col" class="sort text-white text-uppercase font-weight-bold fs-6" data-sort="budget">Proje Adı</th>
                <th scope="col" class="sort text-white text-uppercase font-weight-bold fs-6" data-sort="status">Küçük Resim Yolu</th>
                <th scope="col" class="sort text-white text-uppercase font-weight-bold fs-6" data-sort="status">Büyük Resim Yolu</th>
                <th scope="col" class="sort text-white text-uppercase font-weight-bold fs-6" data-sort="status">Proje Linki</th>
                <th scope="col" class="sort text-white text-uppercase font-weight-bold fs-6" data-sort="status">İşlemler</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="budget">@item.PortfolioID</td>
                    <th scope="row">
                        <div class="media align-items-center">
                            <a href="#" class="avatar rounded-circle mr-3">
                                <img alt="Image placeholder" src="@item.PortfolioIcon">
                            </a>
                            <div class="media-body">
                                <span class="name mb-0 text-sm">@item.PortfolioProjectLanguage</span>
                            </div>
                        </div>
                    </th>
                    <td>
                        <span class="badge badge-dot mr-4">
                            <i class="bg-warning"></i>
                            <span class="status">@item.PortfolioName</span>
                        </span>
                    </td>
                    <td>
                        <span class="badge badge-dot mr-4">
                            <i class="bg-warning"></i>
                            <span class="status">@item.PortfolioImgUrl</span>
                        </span>
                </td>
                <td>
                    <span class="badge badge-dot mr-4">
                        <i class="bg-warning"></i>
                        <span class="status">@item.PortfolioBigImgUrl</span>
                    </span>
                </td>
                <td>
                    <span class="badge badge-dot mr-4">
                        <i class="bg-warning"></i>
                        <span class="status">@item.PortfolioLink</span>
                    </span>
                </td>
                <td>
                    <div class="dropdown">
                        <a class="btn btn-sm alert-success text-white" role="button" data-toggle="dropdown">
                            <img src="~/Template/images/more.png" width="20" height="20" alt="İşlemler">
                        </a>
                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                <a class="dropdown-item" href="/Portfolio/DeletePortfolio/@item.PortfolioID">Sil</a>
                                <a class="dropdown-item" href="/Portfolio/UpdatePortfolio/@item.PortfolioID">Düzenle</a>
                        </div>
                    </div>
                </td>
            </tr>
                        }
        </tbody>
    </table>
    <br />
    <a href="/Portfolio/AddPortfolio/" class="btn btn-success">Yeni Proje Ekle</a>
</div>

