@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/NewLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Poroje İkonu ve Dili</th>
                            <th>Proje Adı</th>
                            <th>Küçük Resim Yolu</th>
                            <th>Büyük Resim Yolu</th>
                            <th>Proje Linki</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                                <td>@item.PortfolioID</td>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image placeholder" src="@item.PortfolioIcon">
                                        </a>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@item.PortfolioProjectLanguage</span>
                                        </div>
                                    </div>
                                </th>
                                <td>@item.PortfolioName</td>
                                <td>@item.PortfolioImgUrl</td>
                                <td>@item.PortfolioBigImgUrl</td>
                                <td><label class="badge badge-info">@item.PortfolioLink</label></td>
                                <td><label class="badge badge-info">@item.PortfolioDate</label></td>
                                <td><a class="btn btn-danger" href="/Portfolio/DeletePortfolio/@item.PortfolioID">Sil</a></td>
                                <td><a class="btn btn-warning" href="/Portfolio/UpdatePortfolio/@item.PortfolioID">Düzenle</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Portfolio/AddPortfolio/" class="btn btn-success">Yeni Proje Ekle</a>
            </div>
        </div>
    </div>
</div>
<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>