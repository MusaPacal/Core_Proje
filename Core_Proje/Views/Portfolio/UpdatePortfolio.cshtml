@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Shared/NewLayout.cshtml";
}

<div class="container-fluid mt-12">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-transparent">
                    <h3 class="mb-0">Proje Düzenleme</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Id</label>
                            <input type="text" id="input-title" class="form-control" asp-for="PortfolioID" placeholder="Id" readonly style="background-color:#1a1c23; color:#fff; border:1px solid #444; opacity:1;">
                        </div>
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Proje Adı</label>
                            <input type="text" id="input-title" class="form-control" asp-for="PortfolioName" placeholder="Proje Adı">
                        </div>
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Küçük Resim Url</label>
                            <input type="text" id="input-title" class="form-control" asp-for="PortfolioImgUrl" placeholder="Küçük Resim Uzantısı">
                        </div>
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Büyük Resim Url</label>
                            <input type="text" id="input-title" class="form-control" asp-for="PortfolioBigImgUrl" placeholder="Büyük Resim Uzantısı">
                        </div>
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Proje Linki</label>
                            <input type="text" id="input-title" class="form-control" asp-for="PortfolioLink" placeholder="Proje Linki">
                        </div>
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Proje Dil İkonu</label>
                            <input type="text" id="input-title" class="form-control" asp-for="PortfolioIcon" placeholder="Proje Dil İkonu">
                        </div>
                        <div class="form-group">
                            <label class="form-control-label" for="input-title">Proje Dili</label>
                            <input type="text" id="input-title" class="form-control" asp-for="PortfolioProjectLanguage" placeholder="Proje Dili">
                        </div>
                        <button type="submit" class="btn btn-success">Kaydet</button>
                        <a href="/Portfolio/Index/" class="btn btn-info">Geri</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


